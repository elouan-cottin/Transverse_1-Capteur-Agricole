#include <ESP8266WiFi.h>
#include <PubSubClient.h>
#include <DHT.h>

// =========================
//  CONFIG WIFI
// =========================
const char* ssid     = "TON_SSID";           // <-- à modifier
const char* password = "TON_MOT_DE_PASSE";   // <-- à modifier

// =========================
//  CONFIG MQTT
// =========================
const char* mqtt_server = "10.42.0.1";   // IP du Raspberry (hotspot)
const int   mqtt_port   = 1883;

// ID UNIQUE DE LA SONDE
// Change cette ligne pour chaque ESP : "sonde1", "sonde2", etc.
const char* SONDE_ID = "sonde1";

// =========================
#define DHTPIN  D4       // Pin du DHT11
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

// =========================
WiFiClient espClient;
PubSubClient client(espClient);

// =========================

// Reconnexion automatique MQTT
void reconnect() {
  while (!client.connected()) {
    Serial.print("Connexion au broker MQTT...");
    if (client.connect(SONDE_ID)) {
      Serial.println(" OK !");
    } else {
      Serial.print(" Échec, code ");
      Serial.print(client.state());
      Serial.println(" -> nouvelle tentative dans 3 secondes...");
      delay(3000);
    }
  }
}

// =========================

void setup() {
  Serial.begin(115200);
  delay(1000);

  Serial.println();
  Serial.println("=== SONDE DHT11 ESP8266 ===");
  Serial.print("ID de la sonde : ");
  Serial.println(SONDE_ID);

  // ---- WIFI ----
  Serial.print("Connexion au WiFi : ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi connecté !");
  Serial.print("IP ESP : ");
  Serial.println(WiFi.localIP());

  // ---- DHT ----
  dht.begin();

  // ---- MQTT ----
  client.setServer(mqtt_server, mqtt_port);
}

// =========================

void loop() {

  // Reconnexion MQTT si besoin
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  // Lecture du capteur
  float hum = dht.readHumidity();
  float temp = dht.readTemperature();

  if (isnan(hum) || isnan(temp)) {
    Serial.println("Erreur de lecture du DHT11 !");
    delay(2000);
    return;
  }

  // Construction du topic
  String topic = "eco/sondes/";
  topic += SONDE_ID;
  topic += "/mesures";

  // Construction du JSON
  String payload = "{";
  payload += "\"temp\":";
  payload += String(temp, 2);
  payload += ",\"hum_air\":";
  payload += String(hum, 2);
  payload += "}";

  // Publication
  boolean ok = client.publish(topic.c_str(), payload.c_str());

  Serial.print("MQTT --> ");
  Serial.print(topic);
  Serial.print(" : ");
  Serial.println(payload);

  if (!ok) {
    Serial.println("⚠ Erreur publication MQTT !");
  }

  delay(5000);     // envoie toutes les 5 secondes
}
